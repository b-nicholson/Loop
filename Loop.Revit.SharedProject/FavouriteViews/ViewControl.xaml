<UserControl
    x:Class="Loop.Revit.FavouriteViews.ViewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Loop.Revit.FavouriteViews"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="400"
    TextElement.Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
    TextElement.FontWeight="Medium"
    TextElement.FontSize="14"
    FontFamily="{materialDesign:MaterialDesignFont}"
    Background="{DynamicResource MaterialDesignPaper}"
             Height="Auto">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:CustomColorTheme BaseTheme="Light"
                                                 PrimaryColor="#FF25C5C5"
                                                 SecondaryColor="DarkGreen" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary>
                    <BooleanToVisibilityConverter x:Key="VisibilityConverter" />
                </ResourceDictionary>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DataGrid.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Source="{Binding Image, Mode=OneWay}"
               Grid.RowSpan ="2"
               Width="25"
               Height="25"
               Margin="10 0 10 0"/>
        <TextBlock Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2"
               Text="{Binding ViewName, Mode=OneWay, FallbackValue= View Title}"
               MinWidth="80"
               FontSize="11" />
        <TextBlock Grid.Column="1"
                   Grid.Row="1"
                   Text="{Binding SheetNumber, Mode=OneWay, FallbackValue= 22/A99999}"
                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                   FontWeight="Light"
                   FontSize="8"
                   MinWidth="80" />
        <TextBlock Grid.Column="2"
                   Grid.Row="1"
                   Text="{Binding SheetTitle, Mode=OneWay, FallbackValue= Sheet Title}"
                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                   FontWeight="Light"
                   FontSize="8"
                   MinWidth="80" />



    </Grid>
</UserControl>
